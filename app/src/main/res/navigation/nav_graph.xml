<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startDrinkingFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.beertime.feature.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/startpageFragment"
        android:name="com.example.beertime.feature.startpage.StartPageFragment"
        android:label="Start page ">
        <action
            android:id="@+id/action_startpageFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_startpageFragment_to_countDownFragment"
            app:destination="@id/countDownFragment" />
    </fragment>
    <fragment
        android:id="@+id/countDownFragment"
        android:name="com.example.beertime.feature.countdown.CountDownFragment"
        android:label="CountDownFragment" />
    <action
        android:id="@+id/action_global_startpageFragment"
        app:destination="@id/startpageFragment" />
    <action
        android:id="@+id/action_global_countDownFragment"
        app:destination="@id/countDownFragment" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <fragment
        android:id="@+id/startDrinkingFragment"
        android:name="com.example.beertime.feature.startdrinking.StartDrinkingFragment"
        android:label="StartDrinkingFragment" >
        <action
            android:id="@+id/action_startDrinkingFragment_to_countDownFragment"
            app:destination="@id/countDownFragment" />
    </fragment><action android:id="@+id/action_global_startDrinkingFragment" app:destination="@id/startDrinkingFragment"/>
</navigation>